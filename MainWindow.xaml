<Window x:Class="Kokarev_PR3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kokarev_PR3"
        mc:Ignorable="d"
        Title="MainWindow" Height="496" Width="849" Loaded="MainWindow_Loaded">
    <Grid>
        <Label Content="Просмотр погоды" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="24" Height="35" FontFamily="Times New Roman" FontWeight="Bold"/>
        <ScrollViewer Margin="10,70,10,70" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="wrapPanelWeather" Width="Auto" Height="Auto"/>
        </ScrollViewer>
        <Label x:Name="labelLoad" Content="Загрузка" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Height="40" FontFamily="Times New Roman" FontWeight="Bold"/>
        <Button x:Name="buttonMinus" Content="Прошлые 25" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Height="45" Width="100" Click="buttonMinus_Click"/>
        <Button x:Name="buttonPlus" Content="Следующие 25" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="45" Width="100" RenderTransformOrigin="0.319,0.59" Click="buttonPlus_Click"/>

    </Grid>
</Window>
